<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico">
    <title>Doowon Portal - <%= pageTitle %></title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="css/darkmode.css" />
    <link rel="stylesheet" type="text/css" href="css/table.css" />
</head>

<body>
    <header class="header">
        <div class="header-left">
            <div class="logo"><a href="http://codebeamer.mdsit.co.kr:3008"><img src="images/codebeamer.png" alt="Logo" /></a></div>
            <button class="mobile-back-button" onclick="goBackOrHome()">
                <img src="images/home.svg" alt="Home" id="mobileBackIcon" />
            </button>
        </div>
        
        <nav class="header-nav">
            <a href="/" class="nav-item <%= currentPath === '/' ? 'active' : '' %>">
                <img src="images/home.svg" alt="Home" />
                <span>홈</span>
            </a>
            <a href="/weekly-reports" class="nav-item <%= currentPath === '/weekly-reports' ? 'active' : '' %>">
                <img src="images/weekly-reports.svg" alt="Weekly Reports" />
                <span><%= sectionTitles['weekly-reports'].name %></span>
            </a>
            <a href="/travel-reports" class="nav-item <%= currentPath === '/travel-reports' ? 'active' : '' %>">
                <img src="images/travel-reports.svg" alt="Travel Reports" />
                <span><%= sectionTitles['travel-reports'].name %></span>
            </a>
            <a href="/hardware-management" class="nav-item <%= currentPath === '/hardware-management' ? 'active' : '' %>">
                <img src="images/hardware-management.svg" alt="Hardware Management" />
                <span><%= sectionTitles['hardware-management'].name %></span>
            </a>
            <a href="/equipment-management" class="nav-item <%= currentPath === '/equipment-management' ? 'active' : '' %>">
                <img src="images/equipment-management.svg" alt="Equipment Management" />
                <span><%= sectionTitles['equipment-management'].name %></span>
            </a>
            <a href="/external-training" class="nav-item <%= currentPath === '/external-training' ? 'active' : '' %>">
                <img src="images/external-training.svg" alt="External Training" />
                <span><%= sectionTitles['external-training'].name %></span>
            </a>
            <a href="<%= fileUploaderUrl %>" class="nav-item" target="_blank">
                <img src="images/upload.svg" alt="upload" />
                <span>파일업로더</span>
            </a>
            <a href="<%= ganttChartUrl %>" class="nav-item" target="_blank">
                <img src="images/gantt.svg" alt="gantt" />
                <span>간트차트</span>
            </a>
            <a href="/admin" class="nav-item <%= currentPath === '/admin' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="Admin" />
                <span>관리자 설정</span>
            </a>
        </nav>
        
        <div class="header-menu">
            <span class="menu-item"><img src="images/user.svg" alt="User" /><%= username %></span>
            <a href="#" class="menu-item" onclick="handleLogout()"><img src="images/logout.svg" alt="Logout" /><span>Logout</span></a>
        </div>
    </header>

<script>
        function openFileUploader() {
            const fileUploaderUrl = 'http://codebeamer.mdsit.co.kr:3007';
            window.open(fileUploaderUrl, '_blank');
        }

        function openGanttChart() {
            const ganttUrl = 'http://codebeamer.mdsit.co.kr:3002';
            window.open(ganttUrl, '_blank');
        }

        function goBackOrHome() {
            if (window.history.length > 1 && document.referrer) {
                const referrer = new URL(document.referrer);
                const currentHost = window.location.host;
                
                if (referrer.host === currentHost && referrer.pathname !== window.location.pathname) {
                    window.history.back();
                    return;
                }
            }
            window.location.href = '/';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const mobileBackButton = document.querySelector('.mobile-back-button');
            const currentPath = window.location.pathname;
            
            if (mobileBackButton) {
                const isMobile = window.innerWidth <= 768;               
                if (currentPath === '/' || !isMobile) {
                    mobileBackButton.style.display = 'none';
                } else {
                    mobileBackButton.style.display = 'flex';
                }
            }
        });

        window.addEventListener('resize', function() {
            const mobileBackButton = document.querySelector('.mobile-back-button');
            const currentPath = window.location.pathname;
            
            if (mobileBackButton) {
                const isMobile = window.innerWidth <= 768;
                
                if (currentPath === '/' || !isMobile) {
                    mobileBackButton.style.display = 'none';
                } else {
                    mobileBackButton.style.display = 'flex';
                }
            }
        });

        function handleLogout() {
            fetch('/logout', { method: 'GET' })
                .then(() => window.location.href = '/login')
                .catch(error => console.error('Logout error:', error));
        }
</script>
</body>