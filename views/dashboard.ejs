<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico">
    <title>Doowon Portal - 대시보드</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="css/darkmode.css" />
    <link rel="stylesheet" type="text/css" href="css/table.css" />
</head>

<body>
    <header class="header">
        <div class="logo"><a href="http://211.238.111.33:8080/cb/"><img src="images/doowon_logo.png" alt="Logo" /></a></div>
        <div class="title-container"><h1>Doowon Portal</h1><p>두원공조 포탈</p></div>
        <div class="menu-container">
            <span class="menu-item"><img src="images/user.svg" alt="User" /><%= username %></span>
            <a href="#" class="menu-item" onclick="handleLogout()"><img src="images/logout.svg" alt="Logout" />Logout</a>
        </div>                  
    </header>

    <nav class="main-nav">
        <div class="nav-container">
            <a href="/" class="nav-item <%= currentPath === '/' ? 'active' : '' %>">
                <img src="images/home.svg" alt="Home" />
                <span>대시보드</span>
            </a>
            <a href="/weekly-reports" class="nav-item <%= currentPath === '/weekly-reports' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="Weekly Reports" />
                <span>주간보고관리</span>
            </a>
            <a href="/travel-reports" class="nav-item <%= currentPath === '/travel-reports' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="Travel Reports" />
                <span>출장보고관리</span>
            </a>
            <a href="/hardware-management" class="nav-item <%= currentPath === '/hardware-management' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="Hardware Management" />
                <span>하드웨어관리</span>
            </a>
            <a href="/equipment-management" class="nav-item <%= currentPath === '/equipment-management' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="Equipment Management" />
                <span>장비관리</span>
            </a>
            <a href="/external-training" class="nav-item <%= currentPath === '/external-training' ? 'active' : '' %>">
                <img src="images/settings.svg" alt="External Training" />
                <span>외부교육관리</span>
            </a>
        </div>
    </nav>

    <div class="main-container">
        <div class="dashboard-content">

            <div class="quick-actions">
                <h3>빠른 작업</h3>
                <div class="action-buttons">
                    <button class="action-btn" onclick="createWeeklyReport()">
                        <span class="btn-icon">📝</span>
                        <span>새 주간보고 작성</span>
                    </button>
                    <button class="action-btn" onclick="createTravelReport()">
                        <span class="btn-icon">📋</span>
                        <span>새 출장보고 작성</span>
                    </button>
                    <button class="action-btn" onclick="createHardware()">
                        <span class="btn-icon">🔧</span>
                        <span>하드웨어 등록</span>
                    </button>
                    <button class="action-btn" onclick="createEquipment()">
                        <span class="btn-icon">⚙️</span>
                        <span>장비 등록</span>
                    </button>
                    <button class="action-btn" onclick="createTraining()">
                        <span class="btn-icon">📚</span>
                        <span>교육 신청</span>
                    </button>
                </div>
            </div>

            <div class="assigned-section">
                <div class="section-header">
                    <h3>📋 나에게 할당된 업무</h3>
                    <div class="assigned-header-right">
                        <span class="assigned-count" id="assignedCount">로딩 중...</span>
                        <button class="btn-small btn-secondary" id="viewAllBtn" onclick="viewAllAssigned()" style="display: none;">전체보기</button>
                    </div>
                </div>
                <div class="assigned-items-container">
                    <div class="assigned-items" id="assignedItems">
                        <div class="loading-spinner">로딩 중...</div>
                    </div>
                    <div class="pagination-controls" id="paginationControls" style="display: none;">
                        <button class="btn-small btn-secondary" id="prevPageBtn" onclick="loadAssignedItems(currentPage - 1)">이전</button>
                        <span class="page-info" id="pageInfo">페이지 1 / 1</span>
                        <button class="btn-small btn-secondary" id="nextPageBtn" onclick="loadAssignedItems(currentPage + 1)">다음</button>
                    </div>
                </div>
            </div>

            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <div class="card-icon">📊</div>
                    <h3>주간보고관리</h3>
                    <p>주간 보고서 작성, 제출 및 관리</p>
                    <a href="/weekly-reports" class="card-button">바로가기</a>
                </div>

                <div class="dashboard-card">
                    <div class="card-icon">✈️</div>
                    <h3>출장보고관리</h3>
                    <p>출장 보고서 작성, 승인 및 관리</p>
                    <a href="/travel-reports" class="card-button">바로가기</a>
                </div>

                <div class="dashboard-card">
                    <div class="card-icon">💻</div>
                    <h3>하드웨어관리</h3>
                    <p>하드웨어 자산 등록, 관리 및 추적</p>
                    <a href="/hardware-management" class="card-button">바로가기</a>
                </div>

                <div class="dashboard-card">
                    <div class="card-icon">🔧</div>
                    <h3>장비관리</h3>
                    <p>공장 장비 등록, 관리 및 추적</p>
                    <a href="/equipment-management" class="card-button">바로가기</a>
                </div>

                <div class="dashboard-card">
                    <div class="card-icon">🎓</div>
                    <h3>외부교육관리</h3>
                    <p>외부 교육 신청, 참석 및 수료 관리</p>
                    <a href="/external-training" class="card-button">바로가기</a>
                </div>
            </div>



        </div>
    </div>

    <script>
        function handleLogout() {
            fetch('/logout', { method: 'GET' })
                .then(() => window.location.href = '/login')
                .catch(error => console.error('Logout error:', error));
        }

        // Quick action functions that navigate to pages and show create forms
        function createWeeklyReport() {
            window.location.href = '/weekly-reports?action=create';
        }

        function createTravelReport() {
            window.location.href = '/travel-reports?action=create';
        }

        function createHardware() {
            window.location.href = '/hardware-management?action=create';
        }

        function createEquipment() {
            window.location.href = '/equipment-management?action=create';
        }

        function createTraining() {
            window.location.href = '/external-training?action=create';
        }

        // Global variables for pagination
        let currentPage = 1;
        let totalPages = 1;
        let totalItems = 0;

        // Load assigned items when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadAssignedItems(1);
        });

        async function loadAssignedItems(page = 1) {
            try {
                const response = await fetch(`/api/assigned-to-me?page=${page}&pageSize=5`, {
                    method: 'GET',
                    credentials: 'include'
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                
                if (data.success) {
                    currentPage = data.page;
                    totalItems = data.total;
                    totalPages = Math.ceil(data.total / data.pageSize);
                    
                    displayAssignedItems(data.items);
                    updatePaginationControls();
                    document.getElementById('assignedCount').textContent = `${data.total}건`;
                    
                    // Show "View All" button if there are more items
                    if (data.hasMore) {
                        document.getElementById('viewAllBtn').style.display = 'inline-block';
                    }
                } else {
                    throw new Error(data.error || 'Failed to load assigned items');
                }
            } catch (error) {
                console.error('Error loading assigned items:', error);
                document.getElementById('assignedItems').innerHTML = 
                    '<div class="error-message">할당된 업무를 불러오는데 실패했습니다.</div>';
                document.getElementById('assignedCount').textContent = '오류';
            }
        }

        function updatePaginationControls() {
            const paginationControls = document.getElementById('paginationControls');
            const prevBtn = document.getElementById('prevPageBtn');
            const nextBtn = document.getElementById('nextPageBtn');
            const pageInfo = document.getElementById('pageInfo');

            if (totalPages > 1) {
                paginationControls.style.display = 'flex';
                prevBtn.disabled = currentPage <= 1;
                nextBtn.disabled = currentPage >= totalPages;
                pageInfo.textContent = `페이지 ${currentPage} / ${totalPages}`;
            } else {
                paginationControls.style.display = 'none';
            }
        }

        function displayAssignedItems(items) {
            const container = document.getElementById('assignedItems');
            
            if (items.length === 0) {
                container.innerHTML = '<div class="no-items">할당된 업무가 없습니다.</div>';
                return;
            }

            const itemsHTML = items.map(item => {
                const submittedDate = new Date(item.submittedAt).toLocaleDateString('ko-KR', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                return `
                    <div class="assigned-item">
                        <div class="item-header">
                            <h4>${item.name}</h4>
                            <span class="item-id">ID: ${item.id}</span>
                        </div>
                        <div class="item-details">
                            <span class="item-status ${item.status.toLowerCase().replace(/\s+/g, '-')}">${item.status}</span>
                            <span class="item-submitted">제출일: ${submittedDate}</span>
                        </div>
                        <div class="item-actions">
                            <button class="btn-small btn-primary" onclick="viewItem(${item.id}, '${item.typeName}')">보기</button>
                            <button class="btn-small btn-success" onclick="processItem(${item.id}, '${item.typeName}')">처리</button>
                        </div>
                    </div>
                `;
            }).join('');

            container.innerHTML = itemsHTML;
        }

        function getTypeLabel(type) {
            const labels = {
                'weekly-report': '주간보고',
                'travel-report': '출장보고',
                'hardware': '하드웨어',
                'equipment': '장비',
                'training': '외부교육'
            };
            return labels[type] || type;
        }

        function getStatusLabel(status) {
            const labels = {
                'pending': '대기',
                'in-progress': '진행중',
                'completed': '완료',
                'cancelled': '취소'
            };
            return labels[status] || status;
        }

        function getPriorityLabel(priority) {
            const labels = {
                'high': '높음',
                'medium': '보통',
                'low': '낮음'
            };
            return labels[priority] || priority;
        }

        function viewItem(id, type) {
            console.log('Viewing item:', id, type);
            // Navigate to appropriate section based on type
            switch(type) {
                case 'weekly-report':
                    window.location.href = '/weekly-reports';
                    break;
                case 'travel-report':
                    window.location.href = '/travel-reports';
                    break;
                case 'hardware':
                    window.location.href = '/hardware-management';
                    break;
                case 'equipment':
                    window.location.href = '/equipment-management';
                    break;
                case 'training':
                    window.location.href = '/external-training';
                    break;
                default:
                    console.log('Unknown item type:', type);
            }
        }

        function processItem(id, type) {
            console.log('Processing item:', id, type);
            // This would open a modal or navigate to process the item
            alert(`${getTypeLabel(type)} 항목을 처리합니다. (ID: ${id})`);
        }

        function viewAllAssigned() {
            // Navigate to a dedicated page showing all assigned items
            // For now, we'll show an alert with the total count
            const totalCount = document.getElementById('assignedCount').textContent;
            alert(`전체 ${totalCount}개의 할당된 업무가 있습니다. 향후 전체 목록 페이지로 이동할 예정입니다.`);
        }
    </script>
</body>
</html>
