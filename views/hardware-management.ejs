    <!-- Dynamic Forms Script -->
    <script src="/js/dynamic-forms.js"></script>
    
    <script>
        let formHandler = new DynamicFormHandler();
        
        // Override the getTableContainerId method for hardware management
        formHandler.getTableContainerId = function() {
            return 'hardwareList';
        };

        // Override pagination methods to use server-side pagination
        formHandler.changePage = function(direction) {
            const newPage = this.pagination.currentPage + direction;
            if (newPage >= 1 && newPage <= this.pagination.totalPages) {
                this.pagination.currentPage = newPage;
                loadHardwareItems(newPage, this.pagination.itemsPerPage, getCurrentSearchTerm());
            }
        };

        formHandler.goToPage = function(page) {
            if (page >= 1 && page <= this.pagination.totalPages) {
                this.pagination.currentPage = page;
                loadHardwareItems(page, this.pagination.itemsPerPage, getCurrentSearchTerm());
            }
        };

        formHandler.changeItemsPerPage = function(newItemsPerPage) {
            console.log('changeItemsPerPage called with:', newItemsPerPage);
            console.log('Current pagination state:', this.pagination);
            this.pagination.itemsPerPage = parseInt(newItemsPerPage);
            this.pagination.currentPage = 1;
            console.log('Updated pagination state:', this.pagination);
            console.log('Calling loadHardwareItems with:', 1, this.pagination.itemsPerPage, getCurrentSearchTerm());
            loadHardwareItems(1, this.pagination.itemsPerPage, getCurrentSearchTerm());
        };

        formHandler.filterItems = function(searchTerm, fieldConfigs) {
            loadHardwareItems(1, this.pagination.itemsPerPage, searchTerm);
        };

        // Helper function to get current search term
        function getCurrentSearchTerm() {
            const searchFilter = document.getElementById('searchFilter');
            return searchFilter ? searchFilter.value : '';
        }

        function handleLogout() {
            fetch('/logout', { method: 'GET' })
